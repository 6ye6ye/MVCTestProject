@model IEnumerable<LostAnimalDtoGetShort>

<table class="table">
    <thead>
        <tr>
            <th class="sortable">
                @Html.DisplayNameFor(model => model.LostDate)
            </th>
            <th class="sortable">
                @Html.DisplayNameFor(model => model.District)
            </th class="sortable">
            <th class="sortable">
                @Html.DisplayNameFor(model => model.AnimalType)
            </th>
            <th class="sortable">
                @Html.DisplayNameFor(model => model.AnimalName)
            </th>
            <th class="sortable">
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LostDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    $(document).ready(function() {$('.sortable').click(function() {
    // Get the index of the clicked header
    const colIndex = $(this).index();

    // Get the table rows as an array
    const rows = $('tbody tr').get();

    // Sort the rows based on the clicked header's text
    rows.sort((a, b) => {
        const aVal = $(a).children(`td:eq(${colIndex})`).text().toLowerCase();
        const bVal = $(b).children(`td:eq(${colIndex})`).text().toLowerCase();
        return aVal.localeCompare(bVal);
    });

    // Remove the existing table rows and re-add them in the sorted order
    $.each(rows, (i, row) => {
        $('tbody').append(row);
    });

})};
</script>
}