@model DomainLayer.ViewModels.LostAnimalViewModelAdd

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Пропавшее животное</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LostAnimal.LostDate" class="control-label"></label>
                <input asp-for="LostAnimal.LostDate" class="form-control" />
                <span asp-validation-for="LostAnimal.LostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LostAnimal.DistrictId" class="control-label"></label>
                <select asp-for="LostAnimal.DistrictId" asp-items="@(Model?.DistrictList ?? Enumerable.Empty<SelectListItem>())" class="form-control">
                    <option value="">Выберите район</option>
                </select>
                <span asp-validation-for="LostAnimal.DistrictId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LostAnimal.AnimalType" class="control-label"></label>
                <select asp-for="LostAnimal.AnimalType" asp-items="@(Model?.AnimalTypeList ?? Enumerable.Empty<SelectListItem>())" class="form-control">
                    <option value="">Выберите тип животного</option>
                </select>
                <span asp-validation-for="LostAnimal.AnimalType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LostAnimal.AnimalName" class="control-label"></label>
                <input asp-for="LostAnimal.AnimalName" class="form-control" />
                <span asp-validation-for="LostAnimal.AnimalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LostAnimal.Info" class="control-label"></label>
                @Html.TextAreaFor(m => m.LostAnimal.Info, new { @class = "form-control", rows = 4 })
                <span asp-validation-for="LostAnimal.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LostAnimal.Phone" class="control-label"></label>
                <input asp-for="LostAnimal.Phone" class="form-control" />
                <span asp-validation-for="LostAnimal.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
