@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DomainLayer.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <label asp-validation-for="UserName" class="text-danger"></label>
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <label asp-validation-for="Password" class="text-danger"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm"></label>
                <label asp-validation-for="PasswordConfirm" class="text-danger"></label>
                <input asp-for="PasswordConfirm" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <button id="registerSubmit" type="submit" class="form-control">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
