@model DomainLayer.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row form-control">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Вход</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <input asp-for="Username" class="form-control" autocomplete="username"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input asp-for="Password" class="form-control" autocomplete="current-password"/>
                </div>
      
                <div>
                    <button id="login-submit" type="submit" class="form-control btn-primary">Войти</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
